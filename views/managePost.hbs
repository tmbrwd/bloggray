<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="../public/profile.css">
</head>
<body>
	<input type="checkbox" id="checkbox">
	<header class="header">
		<h2 class="u-name">Profile</b>
			<label for="checkbox">
				<i id="navbtn" class="fa fa-bars" aria-hidden="true"></i>
			</label>
		</h2>
		<i class="fa fa-user" aria-hidden="true"></i>
	</header>
	<div class="body">
		<nav class="side-bar">
			<div class="user-p">
				<img src="../public/Gray.png" alt="userphoto">
				<h4>{{username}}</h4>
			</div>
			<ul>
				<li>
					<a href="#">
						<i class="fa fa-desktop" aria-hidden="true"></i>
						<span>Dashboard</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class="fa fa-envelope-o" aria-hidden="true"></i>
						<span>Message</span>
					</a>
				</li>
				<li>
					<a href="./createUser">
						<i class="fa fa-comment-o" aria-hidden="true"></i>
						<span>Create user</span>
					</a>
				</li>
				<li>
					<a href="/managePost">
						<i class="fa fa-info-circle" aria-hidden="true"></i>
						<span>About</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class="fa fa-cog" aria-hidden="true"></i>
						<span>Setting</span>
					</a>
				</li>
				<li>
					<a href="/edit/10">
						<i class="fa fa-cog" aria-hidden="true"></i>
						<span>update</span>
					</a>
				</li>
				<li>
					<a href="/userList">
						<i class="fa fa-cog" aria-hidden="true"></i>
						<span>users</span>
					</a>
				</li>
				<li>
					<a href="/index">
						<i class="fa fa-power-off" aria-hidden="true"></i>
						<span>Logout</span>
					</a>
				</li>
			</ul>
		</nav>
		<section class="section-1">
			<h1>posts</h1>
			<table id="customers">
                <tr>
                    <th>
                        id
                    </th>
                    <th>
                        header
                    </th>
                    <th>
                        highlight
                    </th>
					<th>
						main
					</th>
					
					<th>
						image
					</th>
                    <th>
                        action
                    </th>
                    
                  
                </tr>
                {{#each userUploads}}
                <tr>
                    <td>
                        {{id}}
                    </td>
                    <td>
                        {{header}}
                    </td>
                    <td>
                        {{highlight}}
                    </td>
					<td>
						{{main}}
					</td>
					<td>
						{{image}}
					</td>
				
				
                    <td>
                        <a class="editUser" href="/postEdit/{{id}}">edit</a>
                        <form action="/auth/deletePost/{{id}}" method="POST">
                       <input type="submit" value="delete">  </form>
                    </td>
                </tr>
				{{/each}}
		</section>
	</div>

</body>
</html>